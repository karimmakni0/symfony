<script>
    document.addEventListener('DOMContentLoaded', function() {
        const imageUpload = document.getElementById('{{ form.imageFile.vars.id }}');
        const imagePreview = document.getElementById('imagePreview');
        const imagePreviewContainer = document.getElementById('imagePreviewContainer');
        const form = document.querySelector('form');
        
        // Make sure elements exist before adding event listeners
        if (imageUpload) {
            // Preview image when file is selected
            if (imagePreview && imagePreviewContainer) {
                imageUpload.addEventListener('change', function() {
                    if (this.files && this.files[0]) {
                        const reader = new FileReader();
                        
                        reader.onload = function(e) {
                            imagePreview.src = e.target.result;
                            imagePreviewContainer.classList.remove('d-none');
                        }
                        
                        reader.readAsDataURL(this.files[0]);
                    } else {
                        imagePreviewContainer.classList.add('d-none');
                    }
                });
            }
            
            // Log file name for debugging
            imageUpload.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    const fileName = this.files[0].name;
                    const fileSize = Math.round(this.files[0].size / 1024); // Convert to KB
                    console.log(`File selected: ${fileName} (${fileSize}KB)`);
                }
            });
        }
        
        // Debug form submission
        if (form) {
            form.addEventListener('submit', function(e) {
                // Prevent the default submission to check values
                //e.preventDefault();
                
                console.log('Form submitted');
                const formData = new FormData(form);
                for (let [key, value] of formData.entries()) {
                    console.log(`${key}: ${value}`);
                }
                
                // Sync the select dropdown value to the hidden field
                const countrySelect = document.getElementById('destination_location_select');
                const locationField = document.getElementById('{{ form.location.vars.id }}');
                if (countrySelect && locationField) {
                    locationField.value = countrySelect.value;
                }
                
                // Make sure the file is included
                const fileInput = document.getElementById('{{ form.imageFile.vars.id }}');
                if (fileInput && (!fileInput.files || fileInput.files.length === 0)) {
                    console.error('No file selected');
                    // Uncomment the next line if you want to stop submission if no file
                    // return false;
                }
                
                // Continue with submission
                // form.submit();
            });
        }
    });
</script>
