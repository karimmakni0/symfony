{% extends 'PubBase.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
<div class="row justify-between items-center mb-30">
    <div class="col-auto">
        <h1 class="text-26 fw-600">Reservations</h1>
    </div>
</div>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert mb-20 fade-in">
            <div class="px-20 py-15 bg-{% if label == 'success' %}blue-1{% else %}red-1{% endif %} text-white rounded-4 shadow-sm">
                <div class="d-flex items-center">
                    <i class="icon-{% if label == 'success' %}check{% else %}close{% endif %} text-16 mr-10"></i>
                    <div class="fw-500 text-15">{{ message }}</div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}

<div class="py-30 px-30 rounded-4 bg-white shadow-sm">
    <!-- Filter Section -->
    <div class="mb-30">
        <div class="d-flex items-center mb-20">
            <div class="size-40 d-flex items-center justify-center rounded-full bg-blue-2 mr-10">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#3544d1" class="bi bi-funnel" viewBox="0 0 16 16">
                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
                </svg>
            </div>
            <h3 class="text-18 fw-500">Filter Reservations</h3>
        </div>
        
        <form id="reservationFilterForm" class="row y-gap-20">
            <div class="col-xl-3 col-lg-6 col-md-6">
                <div class="form-group">
                    <label class="text-14 mb-10">Search</label>
                    <input type="text" id="searchQuery" name="search" placeholder="Search by name or ID" class="form-control">
                </div>
            </div>

            <div class="col-xl-3 col-lg-6 col-md-6">
                <div class="form-group">
                    <label class="text-14 mb-10">Activity</label>
                    <select id="activityFilter" name="activity" class="form-select">
                        <option value="">All Activities</option>
                        {% for activityId, activity in activities %}
                            <option value="{{ activityId }}">{{ activity.activityName }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="col-xl-3 col-lg-6 col-md-6">
                <div class="form-group">
                    <label class="text-14 mb-10">Status</label>
                    <select id="statusFilter" name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
            </div>

            <div class="col-xl-3 col-lg-6 col-md-6">
                <div class="form-group">
                    <label class="text-14 mb-10">Date</label>
                    <input type="date" id="dateFilter" name="date" class="form-control">
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex justify-end gap-10">
                    <button type="button" id="resetFilters" class="button -outline-blue-1 text-blue-1 py-15 px-20">
                        <i class="icon-refresh text-14 mr-10"></i>
                        Reset
                    </button>
                    <button type="submit" class="button -dark-1 py-15 px-20">
                        <i class="icon-search text-14 mr-10"></i>
                        Apply Filters
                    </button>
                </div>
            </div>
        </form>
    </div>
    
    {% if reservations is empty %}
        <div class="row justify-center py-40">
            <div class="col-lg-6 col-md-8 text-center">
                <div class="size-60 flex-center bg-blue-2 rounded-full mx-auto mb-20">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#3544d1" class="bi bi-calendar-x" viewBox="0 0 16 16">
                        <path d="M6.146 7.146a.5.5 0 0 1 .708 0L8 8.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 9l1.147 1.146a.5.5 0 0 1-.708.708L8 9.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 9 6.146 7.854a.5.5 0 0 1 0-.708z"/>
                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                    </svg>
                </div>
                <h2 class="text-22 fw-500 text-center mb-10">No Reservations Found</h2>
                <div class="text-15 text-light-1 text-center mb-20 max-w-500 mx-auto">You don't have any reservations for your activities yet.</div>
            </div>
        </div>
    {% else %}
        <!-- Filter Section -->
        <div class="mb-30">
            <form id="reservationFilterForm" class="py-20 px-30 rounded-8 bg-blue-1-05 mb-30">
                <div class="row y-gap-20">
                    <div class="col-12">
                        <div class="d-flex items-center">
                            <div class="size-40 flex-center rounded-full bg-blue-1 text-white mr-10">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-funnel" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
                                </svg>
                            </div>
                            <h3 class="text-18 fw-500">Filter Reservations</h3>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="form-input">
                            <input type="text" id="searchQuery" name="search" placeholder="Search by name or ID" class="rounded-8">
                            <label class="lh-1 text-14 text-light-1 fw-500">Search</label>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="form-select">
                            <select id="activityFilter" name="activity" class="rounded-8">
                                <option value="">All Activities</option>
                                {% for activityId, activity in activities %}
                                    <option value="{{ activityId }}">{{ activity.activityName }}</option>
                                {% endfor %}
                            </select>
                            <label class="lh-1 text-14 text-light-1 fw-500">Activity</label>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="form-select">
                            <select id="statusFilter" name="status" class="rounded-8">
                                <option value="">All Statuses</option>
                                <option value="Pending">Pending</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <label class="lh-1 text-14 text-light-1 fw-500">Status</label>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="form-input">
                            <input type="date" id="dateFilter" name="date" class="rounded-8">
                            <label class="lh-1 text-14 text-light-1 fw-500">Date</label>
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-end">
                        <button type="button" id="resetFilters" class="button -md -blue-1-05 text-blue-1 rounded-8 mr-10">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise mr-10" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                                <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                            </svg>
                            Reset
                        </button>
                        <button type="submit" class="button -md -dark-1 bg-blue-1 text-white rounded-8">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search mr-10" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                            </svg>
                            Apply Filters
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Tab Navigation -->
        <div class="tabs js-tabs mb-30">
            <div class="tabs__controls d-flex x-gap-30 items-center js-tabs-controls">
                <div>
                    <button class="tab-button is-tab-el-active" data-tab-target=".-tab-item-1">
                        <span class="py-10 px-20 rounded-100 d-flex items-center bg-blue-1 text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-ul mr-10" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                            </svg>
                            All Reservations
                            <span class="text-12 fw-500 bg-white text-blue-1 rounded-100 px-10 py-4 ml-10">{{ reservations|length }}</span>
                        </span>
                    </button>
                </div>
                <div>
                    <button class="tab-button" data-tab-target=".-tab-item-2">
                        <span class="py-10 px-20 rounded-100 d-flex items-center text-dark-1 bg-white shadow-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle mr-10 text-green-1" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                            Confirmed
                            <span class="text-12 fw-500 bg-green-1 text-white rounded-100 px-10 py-4 ml-10">{{ reservations|filter(r => r.statuts == 'Confirmed')|length }}</span>
                        </span>
                    </button>
                </div>
                <div>
                    <button class="tab-button" data-tab-target=".-tab-item-3">
                        <span class="py-10 px-20 rounded-100 d-flex items-center text-dark-1 bg-white shadow-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle mr-10 text-red-1" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                            Cancelled
                            <span class="text-12 fw-500 bg-red-1 text-white rounded-100 px-10 py-4 ml-10">{{ reservations|filter(r => r.statuts == 'Cancelled')|length }}</span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="tabs__content pt-20 js-tabs-content">
                <div class="tabs__pane -tab-item-1 is-tab-el-active">
                    <div class="overflow-x-auto">
                        <table class="reservation-table w-100">
                            <thead>
                                <tr>
                                    <th class="px-20 py-15 border-none text-16 fw-500 rounded-left-8">Reservation #</th>
                                    <th class="px-20 py-15 border-none text-16 fw-500">Activity</th>
                                    <th class="px-20 py-15 border-none text-16 fw-500">Customer</th>
                                    <th class="px-20 py-15 border-none text-16 fw-500">Date</th>
                                    <th class="px-20 py-15 border-none text-16 fw-500">Tickets</th>
                                    <th class="px-20 py-15 border-none text-16 fw-500">Price</th>
                                    <th class="px-20 py-15 border-none text-16 fw-500">Status</th>
                                    <th class="px-20 py-15 border-none text-16 fw-500 rounded-right-8">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="booking-list">
                                {% for reservation in reservations %}
                                    {% set billet = reservation.billet %}
                                    {% set activityId = billet.activiteId %}
                                    {% set activity = activities[activityId] %}
                                    <tr class="fade-in reservation-row" data-id="{{ reservation.id }}">
                                        <td class="px-20 py-15">
                                            <div class="d-flex items-center">
                                                <div class="size-40 flex-center rounded-full bg-blue-1-05 mr-10">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#3554D1" class="bi bi-receipt" viewBox="0 0 16 16">
                                                        <path d="M1.92.506a.5.5 0 0 1 .434.14L3 1.293l.646-.647a.5.5 0 0 1 .708 0L5 1.293l.646-.647a.5.5 0 0 1 .708 0L7 1.293l.646-.647a.5.5 0 0 1 .708 0L9 1.293l.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .801.13l.5 1A.5.5 0 0 1 15 2v12a.5.5 0 0 1-.053.224l-.5 1a.5.5 0 0 1-.8.13L13 14.707l-.646.647a.5.5 0 0 1-.708 0L11 14.707l-.646.647a.5.5 0 0 1-.708 0L9 14.707l-.646.647a.5.5 0 0 1-.708 0L7 14.707l-.646.647a.5.5 0 0 1-.708 0L5 14.707l-.646.647a.5.5 0 0 1-.708 0L3 14.707l-.646.647a.5.5 0 0 1-.801-.13l-.5-1A.5.5 0 0 1 1 14V2a.5.5 0 0 1 .053-.224l.5-1a.5.5 0 0 1 .367-.27zm.217 1.338L2 2.118v11.764l.137.274.51-.51a.5.5 0 0 1 .707 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.509.509.137-.274V2.118l-.137-.274-.51.51a.5.5 0 0 1-.707 0L12 1.707l-.646.647a.5.5 0 0 1-.708 0L10 1.707l-.646.647a.5.5 0 0 1-.708 0L8 1.707l-.646.647a.5.5 0 0 1-.708 0L6 1.707l-.646.647a.5.5 0 0 1-.708 0L4 1.707l-.646.647a.5.5 0 0 1-.708 0l-.509-.51z"/>
                                                        <path d="M3 4.5a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm8-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5z"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <div class="text-15 fw-500">#{{ reservation.id }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-20 py-15">
                                            <div class="text-15 lh-16 fw-500 text-truncate max-w-200">{{ activity ? activity.activityName : 'Unknown Activity' }}</div>
                                            <div class="text-14 text-light-1"># {{ activityId }}</div>
                                        </td>
                                        <td class="px-20 py-15">
                                            <div class="d-flex items-center">
                                                <div class="size-40 flex-center rounded-full bg-light-2 mr-10">
                                                    <span class="text-15 fw-600 text-dark-1">{{ reservation.user.name|slice(0, 1)|upper }}{{ reservation.user.lastname|slice(0, 1)|upper }}</span>
                                                </div>
                                                <div>
                                                    <div class="text-15 lh-16 fw-500">{{ reservation.user.name }} {{ reservation.user.lastname }}</div>
                                                    <div class="text-14 text-light-1 text-truncate max-w-150">{{ reservation.user.email }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-20 py-15">
                                            <div class="d-flex items-center">
                                                <div class="size-30 flex-center rounded-4 bg-blue-1-05 mr-10">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#3554D1" class="bi bi-calendar3" viewBox="0 0 16 16">
                                                        <path d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-.999-.384-.999-.857V3.857z"/>
                                                        <path d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <div class="text-15 lh-16">{{ reservation.dateAchat|date('M d, Y') }}</div>
                                                    <div class="text-14 text-light-1">{{ reservation.dateAchat|date('H:i') }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-20 py-15">
                                            <div class="d-flex items-center">
                                                <div class="size-30 flex-center rounded-4 bg-blue-1-05 mr-10">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#3554D1" class="bi bi-ticket-perforated" viewBox="0 0 16 16">
                                                        <path d="M4 4.85v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Z"/>
                                                        <path d="M1.5 3A1.5 1.5 0 0 0 0 4.5v7A1.5 1.5 0 0 0 1.5 13h13a1.5 1.5 0 0 0 1.5-1.5v-7A1.5 1.5 0 0 0 14.5 3h-13ZM1 4.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-7Z"/>
                                                        <path d="M1.5 4.5a.5.5 0 0 1 .5.5v3h12V5a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0V9H2v3a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5h12Z"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <div class="text-15 lh-16">{{ reservation.nombre }} ticket(s)</div>
                                                    <div class="text-14 text-light-1">${{ reservation.prixUnite }} each</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-20 py-15">
                                            <div class="fw-500 text-blue-1">${{ reservation.prixTotal }}</div>
                                        </td>
                                        <td class="px-20 py-15">
                                            <div class="rounded-100 py-6 px-20 text-center text-14 fw-500 d-inline-block
                                            {% if reservation.statuts|lower == 'pending' %}
                                                bg-yellow-4 text-yellow-3
                                            {% elseif reservation.statuts|lower == 'confirmed' %}
                                                bg-green-1 text-white
                                            {% elseif reservation.statuts|lower == 'cancelled' %}
                                                bg-red-1 text-white
                                            {% endif %}">
                                                {{ reservation.statuts }}
                                            </div>
                                        </td>
                                        <td class="px-20 py-15">
                                            <div class="d-flex gap-10">
                                                {% if reservation.statuts|lower == 'pending' %}
                                                    <button type="button" class="button -sm px-15 py-10 bg-green-1 text-white rounded-8 shadow-1 confirm-reservation-btn" data-id="{{ reservation.id }}" data-status="Confirmed">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg mr-5" viewBox="0 0 16 16">
                                                            <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                                                        </svg>
                                                        <span>Confirm</span>
                                                    </button>

