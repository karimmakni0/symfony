    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Filter form functionality
            const filterForm = document.getElementById('reservationFilterForm');
            if (filterForm) {
                // Auto-submit on select changes
                document.getElementById('activityFilter')?.addEventListener('change', function() {
                    filterForm.submit();
                });
                document.getElementById('statusFilter')?.addEventListener('change', function() {
                    filterForm.submit();
                });
                document.getElementById('dateFilter')?.addEventListener('change', function() {
                    filterForm.submit();
                });

                // Reset filters button
                document.getElementById('resetFilters')?.addEventListener('click', function() {
                    document.getElementById('searchQuery').value = '';
                    document.getElementById('activityFilter').value = '';
                    document.getElementById('statusFilter').value = '';
                    document.getElementById('dateFilter').value = '';
                    filterForm.submit();
                });
            }

            // Details toggle functionality with smooth animation
            document.querySelectorAll('.toggle-details-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const reservationId = this.getAttribute('data-id');
                    const detailsRow = document.querySelector(`.reservation-details-${reservationId}`);
                    
                    if (detailsRow) {
                        if (detailsRow.style.display === 'none' || detailsRow.style.display === '') {
                            detailsRow.style.display = 'table-row';
                            detailsRow.classList.add('fade-in');
                        } else {
                            detailsRow.style.display = 'none';
                        }
                    }
                });
            });

            // Confirm reservation with SweetAlert
            document.querySelectorAll('.confirm-reservation-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const reservationId = this.getAttribute('data-id');
                    
                    Swal.fire({
                        title: 'Confirm Reservation?',
                        text: 'Are you sure you want to confirm this reservation?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3554D1',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, confirm it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Submit form
                            const form = document.createElement('form');
                            form.method = 'POST';
                            form.action = `{{ path('app_reservation_update_status', {'id': '0', 'status': 'Confirmed'}) }}`.replace('0', reservationId);
                            document.body.appendChild(form);
                            form.submit();
                        }
                    });
                });
            });

            // Cancel reservation with SweetAlert
            document.querySelectorAll('.cancel-reservation-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const reservationId = this.getAttribute('data-id');
                    
                    Swal.fire({
                        title: 'Cancel Reservation?',
                        text: 'Are you sure you want to cancel this reservation?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3554D1',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, cancel it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Submit form
                            const form = document.createElement('form');
                            form.method = 'POST';
                            form.action = `{{ path('app_reservation_update_status', {'id': '0', 'status': 'Cancelled'}) }}`.replace('0', reservationId);
                            document.body.appendChild(form);
                            form.submit();
                        }
                    });
                });
            });

            // Make tabs work properly
            document.querySelectorAll('.tabs__controls button').forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    document.querySelectorAll('.tabs__controls button').forEach(btn => {
                        btn.classList.remove('is-tab-el-active');
                    });
                    
                    // Add active class to clicked button
                    this.classList.add('is-tab-el-active');
                    
                    // Hide all panes
                    document.querySelectorAll('.tabs__pane').forEach(pane => {
                        pane.classList.remove('is-tab-el-active');
                    });
                    
                    // Show target pane
                    const targetPaneClass = this.getAttribute('data-tab-target');
                    document.querySelector(targetPaneClass)?.classList.add('is-tab-el-active');
                });
            });
        });
    </script>
