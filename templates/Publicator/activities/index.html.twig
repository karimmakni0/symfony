            {% for activity in activities %}
                {% if activity.activityDate is not empty and activity.activityDate > 'now'|date('Y-m-d') %}
                    {% set upcomingActivities = upcomingActivities + 1 %}
                {% endif %}
            {% endfor %}
            <div class="stats-card-value">{{ upcomingActivities }}</div>
            <div class="stats-card-label">Upcoming Activities</div>
        </div>
    </div>
</div>

<!-- Search & Filter Bar -->
<div class="row mb-30">
    <div class="col-12">
        <div class="px-20 py-20 rounded-8 bg-white shadow-3" style="border: 1px solid rgba(230, 230, 230, 0.7);">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="search-box">
                        <div class="search-icon">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M11 19C15.4183 19 19 15.4183 19 11C19 6.58172 15.4183 3 11 3C6.58172 3 3 6.58172 3 11C3 15.4183 6.58172 19 11 19Z" stroke="#9CA3AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M21 21L16.65 16.65" stroke="#9CA3AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <input type="text" id="searchInput" class="form-control" placeholder="Search activities...">
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="search-box">
                        <div class="search-icon">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#9CA3AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M12 6V12L16 14" stroke="#9CA3AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <select id="destinationFilter" class="form-select">
                            <option value="">Filter by destination...</option>
                            {% set uniqueDestinations = [] %}
                            {% for activity in activities %}
                                {% if activity.activityDestination is not empty and activity.activityDestination not in uniqueDestinations %}
                                    {% set uniqueDestinations = uniqueDestinations|merge([activity.activityDestination]) %}
                                {% endif %}
                            {% endfor %}
                            {% for destination in uniqueDestinations|sort %}
                                <option value="{{ destination }}">{{ destination }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="d-flex justify-center">
                        <button id="clearFilters" class="button -md -blue-1 bg-blue-1 text-white rounded-8 h-50 px-30 shadow-hover-1">
                            <i class="icon-close-circle text-16 mr-10"></i>
                            Clear Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Activities Table -->
<div class="py-30 px-30 rounded-12 bg-white shadow-3 mb-30" style="border: 1px solid rgba(230, 230, 230, 0.7);">
    {% if activities is empty %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="icon-calendar"></i>
            </div>
            <div class="empty-state-title">No Activities Found</div>
            <div class="empty-state-text">You haven't created any activities yet.</div>
            <a href="{{ path('app_publicator_add_activity') }}" class="button px-30 h-50 -dark-1 bg-blue-1 text-white rounded-8">
                <i class="icon-plus mr-10"></i>
                Create Your First Activity
            </a>
        </div>
    {% else %}
        <!-- Section Title -->
        <div class="d-flex justify-between items-center">
            <h2 class="text-22 fw-500">All Activities</h2>
        </div>
        
        <!-- Activities Table -->
        <div class="tabs -underline-2 js-tabs">
            <div class="tabs__content pt-30 js-tabs-content">
                <div class="tabs__pane -tab-item-1 is-tab-el-active">
                    <div class="overflow-scroll scroll-bar-1">
                        <table class="table-4 -border-bottom col-12">
                            <thead>
                                <tr class="bg-blue-1-05">
                                    <th class="rounded-left-8 py-15 px-15">#</th>
                                    <th class="py-15 px-15">Activity</th>
                                    <th class="py-15 px-15">Destination</th>
                                    <th class="py-15 px-15">Genre</th>
                                    <th class="py-15 px-15">Duration</th>
                                    <th class="py-15 px-15">Price</th>
                                    <th class="py-15 px-15">Date</th>
                                    <th class="rounded-right-8 py-15 px-15 text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for activity in activities %}
                                    <tr class="border-bottom-light activity-item fade-in" 
                                        data-name="{{ activity.activityName|lower }}" 
                                        data-destination="{{ activity.activityDestination|lower }}" 
                                        data-genre="{{ activity.activityGenre|lower }}">
                                        <td class="py-15 px-15">{{ loop.index }}</td>
                                        <td class="py-15 px-15">
                                            <div class="fw-500 lh-14">{{ activity.activityName }}</div>
                                        </td>
                                        <td class="py-15 px-15">{{ activity.activityDestination }}</td>
                                        <td class="py-15 px-15">
                                            <span class="badge py-5 px-15 text-14 bg-blue-1-05 text-blue-1 rounded-100">{{ activity.activityGenre }}</span>
                                        </td>
                                        <td class="py-15 px-15">{{ activity.activityDuration }}</td>
                                        <td class="py-15 px-15 fw-500">${{ activity.activityPrice }}</td>
                                        <td class="py-15 px-15">
                                            {% if activity.activityDate %}
                                                {% set isUpcoming = activity.activityDate > 'now'|date('Y-m-d') %}
                                                <span class="badge py-5 px-15 text-14 {% if isUpcoming %}bg-green-2 text-green-1{% else %}bg-light-2 text-light-1{% endif %} rounded-100">
                                                    {{ activity.activityDate|date('d M Y') }}
                                                </span>
                                            {% else %}
                                                <span class="text-light-1">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td class="py-15 px-15">
                                            <div class="d-flex x-gap-10 justify-center">
                                                <div>
                                                    <a href="{{ path('app_publicator_activity_detail', {'id': activity.id}) }}" 
                                                       class="btn size-30 rounded-8 bg-blue-1 text-white shadow-hover-2">
                                                        <i class="icon-eye text-12"></i>
                                                    </a>
                                                </div>
                                                <div>
                                                    <a href="{{ path('app_publicator_edit_activity', {'id': activity.id}) }}" 
                                                       class="btn size-30 rounded-8 bg-light-2 shadow-hover-2">
                                                        <i class="icon-edit text-12"></i>
                                                    </a>
                                                </div>
                                                <div>
                                                    <button type="button" class="btn size-30 rounded-8 bg-red-3 text-red-1 shadow-hover-2 delete-activity" 
                                                            data-id="{{ activity.id }}" data-name="{{ activity.activityName }}">
                                                        <i class="icon-trash text-12"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- No Results Message -->
        <div id="noResults" class="empty-state" style="display: none;">
            <div class="empty-state-icon">
                <i class="icon-search"></i>
            </div>
            <div class="empty-state-title">No matching activities found</div>
            <div class="empty-state-text">Try adjusting your search or filter to find what you're looking for.</div>
            <button id="resetFilters" class="button px-30 h-50 -blue-1 bg-blue-1-05 text-blue-1 rounded-8">
                <i class="icon-close mr-10"></i>
                Reset Filters
            </button>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<!-- SweetAlert2 Library -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Check URL parameters for success message
    const urlParams = new URLSearchParams(window.location.search);
    const successParam = urlParams.get('success');
    
    if (successParam === 'activity_created') {
        Swal.fire({
            title: 'Success!',
            text: 'Activity created successfully!',
            icon: 'success',
            confirmButtonText: 'OK',
            confirmButtonColor: '#3554D1'
        });
        
        // Remove the success parameter from URL without reloading the page
        const newUrl = window.location.pathname;
        window.history.replaceState({}, document.title, newUrl);
    }
    
    // Cache DOM elements
    const searchInput = document.getElementById('searchInput');
    const destinationFilter = document.getElementById('destinationFilter');
    const clearFiltersBtn = document.getElementById('clearFilters');
    const resetFiltersBtn = document.getElementById('resetFilters');
    const activityItems = document.querySelectorAll('.activity-item');
    const noResultsEl = document.getElementById('noResults');
    const activityCountEl = document.getElementById('activityCount');
    
    // Search and filter functionality
    function filterActivities() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const destinationValue = destinationFilter.value.toLowerCase();
        
        let visibleCount = 0;
        
        activityItems.forEach(item => {
            const name = item.getAttribute('data-name') || '';
            const destination = item.getAttribute('data-destination') || '';
            const genre = item.getAttribute('data-genre') || '';
            
            const matchesSearch = searchTerm === '' || 
                name.includes(searchTerm) || 
                destination.includes(searchTerm) || 
                genre.includes(searchTerm);
                
            const matchesDestination = destinationValue === '' || destination === destinationValue;
            
            if (matchesSearch && matchesDestination) {
                item.style.display = '';
                visibleCount++;
            } else {
                item.style.display = 'none';
            }
        });
        
        // Update count and show/hide no results message
        if (activityCountEl) {
            activityCountEl.textContent = `${visibleCount} Activities`;
        }
        
        if (noResultsEl) {
            noResultsEl.style.display = visibleCount === 0 ? 'block' : 'none';
        }
        
        // Show table or no results
        const tableEl = document.querySelector('.tabs');
        if (tableEl) {
            tableEl.style.display = visibleCount === 0 ? 'none' : 'block';
        }
    }
    
    // Clear all filters
    function clearFilters() {
        if (searchInput) searchInput.value = '';
        if (destinationFilter) destinationFilter.value = '';
        filterActivities();
    }
    
    // Add event listeners
    if (searchInput) {
        searchInput.addEventListener('input', filterActivities);
    }
    
    if (destinationFilter) {
        destinationFilter.addEventListener('change', filterActivities);
    }
    
    if (clearFiltersBtn) {
        clearFiltersBtn.addEventListener('click', clearFilters);
    }
    
    if (resetFiltersBtn) {
        resetFiltersBtn.addEventListener('click', clearFilters);
    }
    
    // Delete activity with SweetAlert confirmation
    const deleteButtons = document.querySelectorAll('.delete-activity');
    deleteButtons.forEach(button => {
        button.addEventListener('click', function() {
            const activityId = this.getAttribute('data-id');
            const activityName = this.getAttribute('data-name');
            
            Swal.fire({
                title: 'Are you sure?',
                html: `You are about to delete <strong>${activityName}</strong>. This action cannot be undone.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '{{ path("app_publicator_activities") }}/delete/' + activityId;
                }
            });
        });
    });
});
</script>
