                    </svg>
                </div>
            </div>
            <div class="stats-card-value">{{ activities|length }}</div>
            <div class="stats-card-label">Total Activities</div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="stats-card">
            <div class="stats-card-top">
                <div class="stats-card-icon green">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                    </svg>
                </div>
            </div>
            {% set uniqueDestinations = [] %}
            {% for activity in activities %}
                {% if activity.activityDestination is not empty and activity.activityDestination not in uniqueDestinations %}
                    {% set uniqueDestinations = uniqueDestinations|merge([activity.activityDestination]) %}
                {% endif %}
            {% endfor %}
            <div class="stats-card-value">{{ uniqueDestinations|length }}</div>
            <div class="stats-card-label">Unique Destinations</div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="stats-card">
            <div class="stats-card-top">
                <div class="stats-card-icon purple">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
