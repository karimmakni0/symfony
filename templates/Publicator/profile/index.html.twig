{% extends 'PubBase.html.twig' %}

{% block title %}Profile Settings{% endblock %}

{% block body %}
<div class="row y-gap-20 justify-between items-end pb-60 lg:pb-40 md:pb-32">
    <div class="col-auto">
        <h1 class="text-30 lh-14 fw-600">Profile Settings</h1>
        <div class="text-15 text-light-1">Manage your account information</div>
    </div>
</div>

<div class="py-30 px-30 rounded-4 bg-white shadow-3">
    <div class="tabs -underline-2 js-tabs">
        <div class="tabs__controls row x-gap-40 y-gap-10 lg:x-gap-20 js-tabs-controls">
            <div class="col-auto">
                <button class="tabs__button text-18 lg:text-16 text-light-1 fw-500 pb-5 lg:pb-0 js-tabs-button is-tab-el-active" data-tab-target=".-tab-item-1">Personal Information</button>
            </div>
            <div class="col-auto">
                <button class="tabs__button text-18 lg:text-16 text-light-1 fw-500 pb-5 lg:pb-0 js-tabs-button" data-tab-target=".-tab-item-2">Location Information</button>
            </div>
            <div class="col-auto">
                <button class="tabs__button text-18 lg:text-16 text-light-1 fw-500 pb-5 lg:pb-0 js-tabs-button" data-tab-target=".-tab-item-3">Change Password</button>
            </div>
        </div>

        <div class="tabs__content pt-30 js-tabs-content">
            <div class="tabs__pane -tab-item-1 is-tab-el-active">
                <div class="row y-gap-30 items-center">
                    <div class="col-auto">
                        <div class="d-flex ratio ratio-1:1 w-200 h-200">
                            <img src="{{ asset('assets/img/avatars/3.png') }}" alt="avatar" class="img-ratio rounded-full">
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="text-16 fw-500">Your avatar</div>
                        <div class="text-14 mt-5">PNG or JPG no bigger than 800px wide and tall.</div>
                        <div class="d-flex x-gap-10 y-gap-10 pt-15">
                            <div>
                                <button class="button h-50 px-24 -dark-1 bg-blue-1 text-white">
                                    <i class="icon-upload mr-10"></i>
                                    Change Avatar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="border-top-light mt-30 mb-30"></div>

                <div class="col-xl-9">
                    <div class="row x-gap-20 y-gap-20">
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>First Name</label>
                                <input type="text" value="{{ user.firstName|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>Last Name</label>
                                <input type="text" value="{{ user.lastName|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>Email</label>
                                <input type="text" value="{{ user.email|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>Phone Number</label>
                                <input type="text" value="{{ user.phone|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>Birthday</label>
                                <input type="date" value="{{ user.birthday|date('Y-m-d')|default('') }}">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-end">
                                <button class="button h-50 px-24 -dark-1 bg-blue-1 text-white">
                                    <i class="icon-check mr-10"></i>
                                    Save Changes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tabs__pane -tab-item-2">
                <div class="col-xl-9">
                    <div class="row x-gap-20 y-gap-20">
                        <div class="col-12">
                            <div class="form-input">
                                <label>Address</label>
                                <input type="text" value="{{ user.address|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>City</label>
                                <input type="text" value="{{ user.city|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>State/Province</label>
                                <input type="text" value="{{ user.state|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>ZIP Code</label>
                                <input type="text" value="{{ user.zipCode|default('') }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-input">
                                <label>Country</label>
                                <input type="text" value="{{ user.country|default('') }}">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-end">
                                <button class="button h-50 px-24 -dark-1 bg-blue-1 text-white">
                                    <i class="icon-check mr-10"></i>
                                    Save Changes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tabs__pane -tab-item-3">
                <div class="col-xl-9">
                    <div class="row x-gap-20 y-gap-20">
                        <div class="col-12">
                            <div class="form-input">
                                <label>Current Password</label>
                                <input type="password">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-input">
                                <label>New Password</label>
                                <input type="password">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-input">
                                <label>Confirm New Password</label>
                                <input type="password">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-end">
                                <button class="button h-50 px-24 -dark-1 bg-blue-1 text-white">
                                    <i class="icon-check mr-10"></i>
                                    Update Password
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tabButtons = document.querySelectorAll('.js-tabs-button');
        const tabContents = document.querySelectorAll('.tabs__pane');
        
        tabButtons.forEach(button => {
            button.addEventListener('click', function() {
                const target = this.getAttribute('data-tab-target');
                
                // Remove active class from all buttons and panes
                tabButtons.forEach(btn => btn.classList.remove('is-tab-el-active'));
                tabContents.forEach(content => content.classList.remove('is-tab-el-active'));
                
                // Add active class to clicked button
                this.classList.add('is-tab-el-active');
                
                // Add active class to corresponding pane
                document.querySelector(target).classList.add('is-tab-el-active');
            });
        });
    });
</script>
{% endblock %}
