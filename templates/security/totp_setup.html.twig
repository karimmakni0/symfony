{% extends 'base.html.twig' %}

{% block title %}Setup Two-Factor Authentication{% endblock %}

{% block body %}
<section class="layout-pt-lg layout-pb-lg bg-blue-2">
  <div class="container">
    <div class="row justify-center">
      <div class="col-xl-6 col-lg-7 col-md-9">
        <div class="px-50 py-50 sm:px-20 sm:py-20 bg-white shadow-4 rounded-4">
          <div class="row y-gap-20">
            <div class="col-12 text-center">
              <h1 class="text-30 fw-600">Setup 2FA Authentication</h1>
              <p class="mt-10">Scan the QR code with Google Authenticator app</p>
            </div>

            {% if error %}
                <div class="col-12">
                    <div class="alert alert-danger rounded-4 py-10 px-15 bg-red-3 text-red-2">
                        {{ error }}
                    </div>
                </div>
            {% endif %}

            <div class="col-12 text-center">
                <div class="qr-code-container mt-20 mb-20" style="width: 200px; margin: 0 auto;">
                    <img src="{{ qr_code }}" alt="QR Code" class="img-fluid">
                </div>
                <p class="mt-10">Can't scan the QR code? Use this code instead:</p>
                <div class="secret-code mt-10 mb-20">
                    <code style="background: #f0f0f0; padding: 8px 12px; border-radius: 4px;">{{ totp_secret }}</code>
                </div>
                <div class="instructions mt-20">
                    <h3 class="text-18 fw-500">Instructions:</h3>
                    <ol class="text-left mt-10" style="display: inline-block; text-align: left;">
                        <li>Download Google Authenticator app from App Store or Play Store</li>
                        <li>Open the app and scan the QR code above or enter the code manually</li>
                        <li>Enter the 6-digit code shown in the app below</li>
                    </ol>
                </div>
            </div>

            <form action="{{ path('app_totp_setup_verify') }}" method="post" class="row y-gap-20 mt-20">
                <div class="col-12">
                    <div class="form-input">
                        <input type="text" name="totp_code" class="has-value text-center" placeholder=" " required>
                        <label class="lh-1 text-14 text-light-1">Verification Code</label>
                    </div>
                </div>

                <input type="hidden" name="user_id" value="{{ user_id }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="col-12 d-flex justify-center mt-15">
                    <button type="submit" class="button py-20 -dark-1 bg-blue-1 text-white w-100" style="max-width: 80%; min-width: 300px;">
                        <span class="fw-500 text-16">Verify and Complete Setup</span>
                        <div class="icon-arrow-top-right ml-15"></div>
                    </button>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
