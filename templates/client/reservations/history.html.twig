<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Search functionality
    const searchInput = document.getElementById('searchBooking');
    if (searchInput) {
      searchInput.addEventListener('keyup', function() {
        const searchValue = this.value.toLowerCase();
        const rows = document.querySelectorAll('.reservation-row');
        
        rows.forEach(row => {
          const text = row.textContent.toLowerCase();
          if (text.includes(searchValue)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    }
    
    // Sorting functionality
    const sortButtons = document.querySelectorAll('.js-dropdown-link');
    if (sortButtons) {
      sortButtons.forEach(button => {
        button.addEventListener('click', function() {
          const sortValue = this.getAttribute('data-sort');
          const rows = Array.from(document.querySelectorAll('.reservation-row'));
          const table = document.querySelector('table tbody');
          
          rows.sort((a, b) => {
            if (sortValue === 'date-desc') {
              return new Date(b.getAttribute('data-date')) - new Date(a.getAttribute('data-date'));
            } else if (sortValue === 'date-asc') {
              return new Date(a.getAttribute('data-date')) - new Date(b.getAttribute('data-date'));
            } else if (sortValue === 'price-desc') {
              return parseFloat(b.getAttribute('data-price')) - parseFloat(a.getAttribute('data-price'));
            } else if (sortValue === 'price-asc') {
              return parseFloat(a.getAttribute('data-price')) - parseFloat(b.getAttribute('data-price'));
            }
            return 0;
          });
          
          // Remove existing rows
          rows.forEach(row => row.remove());
          
          // Add sorted rows
          rows.forEach(row => table.appendChild(row));
        });
      });
    }
  });

  document.addEventListener('DOMContentLoaded', function() {
    // Fix user dropdown functionality
    const userDropdownButtons = document.querySelectorAll('[data-el-toggle=".js-user-nav-dropdown"]');
    const userDropdown = document.querySelector('.js-user-nav-dropdown');
    
    if (userDropdownButtons.length > 0 && userDropdown) {
      userDropdownButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          userDropdown.classList.toggle('is-active');
          userDropdown.classList.toggle('-is-el-visible');
        });
      });
      
      // Close dropdown when clicking outside
      document.addEventListener('click', function(e) {
        if (!userDropdown.contains(e.target) && !Array.from(userDropdownButtons).some(btn => btn.contains(e.target))) {
          userDropdown.classList.remove('is-active');
          userDropdown.classList.remove('-is-el-visible');
        }
      });
    }
    
    // Tab Navigation
    const tabButtons = document.querySelectorAll('.js-tabs-button');
    const tabContents = document.querySelectorAll('.tabs__pane');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const targetTab = button.getAttribute('data-tab-target');
        
        // Remove active class from all buttons and tabs
        tabButtons.forEach(btn => btn.classList.remove('is-tab-el-active'));
        tabContents.forEach(tab => tab.classList.remove('is-tab-el-active'));
        
        // Add active class to clicked button and corresponding tab
        button.classList.add('is-tab-el-active');
        document.querySelector(targetTab).classList.add('is-tab-el-active');
      });
    });
  });
</script>
