    </div>

    <div class="preloader__title">GoTrip</div>
  </div>


  <div class="header-margin"></div>
  <header data-add-bg="" class="header -dashboard bg-white js-header" data-x="header" data-x-toggle="is-menu-opened">
    <div data-anim="fade" class="header__container px-30 sm:px-20">
      <div class="-left-side">
        <a href="{{ path('app_home') }}" class="header-logo" data-x="header-logo" data-x-toggle="is-logo-dark">
          <img src="{{ asset('assets/img/general/logo-dark.svg') }}" alt="logo icon">
          <img src="{{ asset('assets/img/general/logo-dark.svg') }}" alt="logo icon">
        </a>
      </div>

      <div class="row justify-between items-center pl-60 lg:pl-20">
        <div class="col-auto">
          <div class="d-flex items-center">
            <button data-x-click="dashboard">
              <i class="icon-menu-2 text-20"></i>
            </button>

            <div class="single-field relative d-flex items-center md:d-none ml-30">
              <input class="pl-50 border-light text-dark-1 h-50 rounded-8" type="email" placeholder="Search">
              <button class="absolute d-flex items-center h-full">
                <i class="icon-search text-20 px-15 text-dark-1"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="col-auto">
          <div class="d-flex items-center">
            <div class="row items-center x-gap-5 y-gap-20 pl-20 lg:d-none">
              <div class="col-auto">
                <button class="button -blue-1-05 size-50 rounded-22 flex-center">
                  <i class="icon-email-2 text-20"></i>
                </button>
              </div>

              <div class="col-auto">
                <button class="button -blue-1-05 size-50 rounded-22 flex-center">
                  <i class="icon-notification text-20"></i>
                </button>
              </div>
            </div>

            <div class="pl-15 d-flex items-center">
              <div class="dropdown">
                <div class="d-flex items-center user-dropdown-toggle" id="userDropdown">
                  {% if app.user and app.user.image %}
                    <img src="{{ asset(app.user.image) }}" alt="{{ app.user.name }}" class="size-50 rounded-22 object-cover">
                  {% else %}
                    <div class="size-50 rounded-22 flex-center bg-blue-1-05 text-blue-1">
                      <i class="icon-user text-24"></i>
                    </div>
                  {% endif %}
                  <div class="pl-10 d-md-block">
                    <div class="text-15 lh-14 fw-500">{% if app.user %}{{ app.user.name }} {{ app.user.lastname }}{% else %}Admin User{% endif %}</div>
                    <div class="text-13 lh-14 text-light-1">{% if app.user %}{{ app.user.role }}{% else %}Administrator{% endif %}</div>
                  </div>
                  <i class="icon-chevron-down text-7 ml-15"></i>
                </div>
                
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                  <li>
                    <div class="px-20 py-10 border-bottom">
                      <div class="text-14 fw-500">Signed in as</div>
                      <div class="text-14 mt-5 text-blue-1">{% if app.user %}{{ app.user.email }}{% else %}admin@example.com{% endif %}</div>
                    </div>
                  </li>
                  <li><a href="{{ path('admin_dashboard') }}" class="dropdown-item text-14">Dashboard</a></li>
                  <li><a href="{{ path('admin_users') }}" class="dropdown-item text-14">Manage Users</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a href="{{ path('app_logout') }}" class="dropdown-item text-14">Sign out</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>


  <div class="dashboard" data-x="dashboard" data-x-toggle="-is-sidebar-open">
    <div class="dashboard__sidebar bg-white scroll-bar-1">
      <div class="sidebar -dashboard">
        <div class="sidebar__item">
          <div class="sidebar__button {% if app.request.attributes.get('_route') == 'admin_dashboard' %}-is-active{% endif %}">
            <a href="{{ path('admin_dashboard') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/compass.svg') }}" alt="image" class="mr-15">
              Dashboard
            </a>
          </div>
        </div>

        <div class="sidebar__item">
          <div class="sidebar__button {% if app.request.attributes.get('_route') == 'admin_bookings' %}-is-active{% endif %}">
            <a href="{{ path('admin_bookings') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/booking.svg') }}" alt="image" class="mr-15">
              Booking History
            </a>
          </div>
        </div>

        <div class="sidebar__item">
          <div class="sidebar__button {% if app.request.attributes.get('_route') == 'admin_destinations' %}-is-active{% endif %}">
            <a href="{{ path('admin_destinations') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/airplane.svg') }}" alt="image" class="mr-15">
              Manage Destinations
            </a>
          </div>
        </div>

        <div class="sidebar__item">
          <div class="sidebar__button {% if app.request.attributes.get('_route') == 'admin_activities' %}-is-active{% endif %}">
            <a href="{{ path('admin_activities') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/sneakers.svg') }}" alt="image" class="mr-15">
              Manage Activities
            </a>
          </div>
        </div>

        <div class="sidebar__item">
          <div class="sidebar__button {% if app.request.attributes.get('_route') starts with 'app_admin_blog' %}-is-active{% endif %}">
            <a href="{{ path('app_admin_blog_index') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/booking.svg') }}" alt="image" class="mr-15">
              Manage Blogs
            </a>
          </div>
        </div>

        <div class="sidebar__item">
          <div class="sidebar__button {% if app.request.attributes.get('_route') == 'admin_users' %}-is-active{% endif %}">
            <a href="{{ path('admin_users') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/gear.svg') }}" alt="image" class="mr-15">
              Manage Users
            </a>
          </div>
        </div>

        <div class="sidebar__item">
          <div class="sidebar__button {% if app.request.attributes.get('_route') starts with 'admin_upgrade_requests' %}-is-active{% endif %}">
            <a href="{{ path('admin_upgrade_requests') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/upgrade.svg') }}" alt="image" class="mr-15">
              Upgrade Requests
            </a>
          </div>
        </div>

        <div class="sidebar__item">
          <div class="sidebar__button">
            <a href="{{ path('app_logout') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{ asset('assets/img/dashboard/sidebar/log-out.svg') }}" alt="image" class="mr-15">
              Logout
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="dashboard__main">
      <div class="dashboard__content bg-light-2">
        {# Flash messages will now be handled by SweetAlert instead of being displayed directly #}
        {% block body %}{% endblock %}

